<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence               https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
  <persistence-unit name="my_persistence_unit" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>com.mycompany.ecommerce_api.dominio.DetallePedido</class>
    <class>com.mycompany.ecommerce_api.dominio.Pago</class>
    <class>com.mycompany.ecommerce_api.dominio.Direccion</class>
    <class>com.mycompany.ecommerce_api.dominio.Resena</class>
    <class>com.mycompany.ecommerce_api.dominio.Usuario</class>
    <class>com.mycompany.ecommerce_api.dominio.Pedido</class>
    <class>com.mycompany.ecommerce_api.dominio.Categoria</class>
    <class>com.mycompany.ecommerce_api.dominio.Producto</class>
    <properties>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ecommerce_db?useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value="ITSON"/>
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.use_sql_comments" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
